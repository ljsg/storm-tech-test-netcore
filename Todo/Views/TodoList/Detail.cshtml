@using Todo.Controllers
@using Todo.Data.Entities
@using Todo.Services
@model Todo.Models.TodoLists.TodoListDetailViewmodel

@{
    ViewData["Title"] = $"List: {Model.Title}";
}

<h2>@ViewData["Title"]</h2>

<div class="col-md-6">
    <ul class="list-group">
        <li class="list-group-item">
            <a asp-action="Create" asp-controller="TodoItem" asp-route-todoListId="@Model.TodoListId">
                <strong>Add New Item</strong>
            </a>
        </li>

        @foreach (var item in Model.Items.OrderBy(i => i.Importance))
        {
            string contextualClass;
            switch (item.Importance)
            {
                case Importance.High:
                    contextualClass = "list-group-item-danger";
                    break;
                case Importance.Low:
                    contextualClass = "list-group-item-info";
                    break;
                default:
                    contextualClass = "";
                    break;
            }
            string classComplete = @item.IsDone ? "is-done" : "is-not-done";
            <li class="list-group-item ranked-item @contextualClass @classComplete" data-sort="@item.Rank">
                @Html.Hidden(item.ResponsibleParty.Email)
                <div class="row">
                    <div class="col-md-8">
                        <a asp-action="Edit" asp-controller="TodoItem" asp-route-todoItemId="@item.TodoItemId">

                            @if (item.IsDone)
                            {
                                <s>@item.Title</s>
                            }
                            else
                            {
                                <text>@item.Title</text>
                            }
                        </a>
                    </div>
                    <div class="col-md-4 text-right profile">
                        @{await Html.PartialAsync("_ProfilePartial", new UserProfile(item.ResponsibleParty.Email,""));}
                    </div>
                </div>
            </li>
        }
    </ul>
    <div>
        <label>Hide items marked as done</label>
        <input id="hide-items-toggle" type="checkbox">
    </div>
    <div>
        <label>Sort by rank</label>
        <button id="sort-button" class="btn btn-primary">Sort</button>
    </div>

</div>